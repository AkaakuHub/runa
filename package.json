{
  "name": "miurd",
  "version": "1.0.0",
  "description": "A Discord bot that responds to specific messages.",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "deploy": "tsx src/deploy-commands.ts --reset",
    "reset": "tsx src/deploy-commands.ts --reset-global",
    "reset:only": "tsx src/deploy-commands.ts --reset --reset-global --reset-only",
    "lint": "pnpm biome lint --apply ./src",
    "format": "pnpm biome format --write ./src",
    "knip": "knip",
    "voicevox:setup": "./scripts/setup-voicevox.sh",
    "voicevox:start": "./scripts/start-voicevox.sh start",
    "voicevox:start:host": "./scripts/start-voicevox.sh start --host",
    "voicevox:stop": "./scripts/start-voicevox.sh stop",
    "voicevox:status": "./scripts/start-voicevox.sh status",
    "voicevox:restart": "./scripts/start-voicevox.sh restart",
    "sudachi:setup": "./scripts/setup-sudachi.sh",
    "start:full": "concurrently \"pnpm run voicevox:start\" \"pnpm run dev\""
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "@google/generative-ai": "^0.24.1",
    "@types/d3": "^7.4.3",
    "@types/jsdom": "^21.1.7",
    "@types/node-cron": "^3.0.11",
    "d3": "^7.9.0",
    "discord.js": "^14.19.3",
    "dotenv": "^10.0.0",
    "ffmpeg-static": "^5.2.0",
    "jsdom": "^26.1.0",
    "libsodium-wrappers": "^0.7.15",
    "node-cron": "^4.1.0",
    "opusscript": "^0.1.1",
    "prism-media": "^1.3.5",
    "sharp": "^0.34.3",
    "tsx": "^4.19.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.24.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "knip": "^5.63.1",
    "lefthook": "^1.12.4",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  }
}
