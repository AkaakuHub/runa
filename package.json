{
  "name": "miurd",
  "version": "1.0.0",
  "description": "A Discord bot that responds to specific messages.",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "prod": "NODE_ENV=production tsx src/index.ts",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop miurd",
    "pm2:restart": "pm2 restart miurd",
    "pm2:logs": "pm2 logs miurd",
    "pm2:monitor": "pm2 monit",
    "deploy": "tsx src/deploy-commands.ts --reset",
    "reset": "tsx src/deploy-commands.ts --reset-global",
    "lint": "pnpm biome lint --apply ./src",
    "format": "pnpm biome format --write ./src"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "@google/generative-ai": "^0.24.1",
    "@types/d3": "^7.4.3",
    "@types/jsdom": "^21.1.7",
    "d3": "^7.9.0",
    "discord.js": "^14.19.3",
    "dotenv": "^10.0.0",
    "ffmpeg-static": "^5.2.0",
    "jsdom": "^26.1.0",
    "libsodium-wrappers": "^0.7.15",
    "node-cron": "^4.1.0",
    "opusscript": "^0.1.1",
    "prism-media": "^1.3.5",
    "rss-parser": "^3.13.0",
    "sharp": "^0.34.3",
    "tsx": "^4.19.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.24.0",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  }
}